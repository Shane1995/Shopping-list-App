<hr
	style=" margin-top: 1rem;
                margin-bottom: 1rem;
                border: 0;
                border-top: 1px solid rgba(0, 0, 0);"
/>
<form class="container mb-2" action="./post-item" method="POST">
	<div class="text-center">
		<h1>Add Item to Shopping List</h1>
	</div>
	<hr
		style=" margin-top: 1rem;
                margin-bottom: 1rem;
                border: 0;
                border-top: 1px solid rgba(0, 0, 0, 0.1);"
	/>
	<div class="row">
		<div class="col">
			<div class="input-group input-group-lg mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-lg"
						>Item Name</span
					>
				</div>
				<input
					type="text"
					class="form-control"
					aria-label="Small"
					aria-describedby="inputGroup-sizing-lg"
					name="name"
				/>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<div class="input-group input-group-lg mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-lg"
						>Quantity</span
					>
				</div>
				<input
					type="number"
					class="form-control"
					min="1"
					value="1"
					aria-label="Small"
					aria-describedby="inputGroup-sizing-lg"
					name="quantity"
				/>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<div class="input-group input-group-lg mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-lg"
						>Where</span
					>
				</div>
				<input
					type="text"
					class="form-control"
					aria-label="Small"
					aria-describedby="inputGroup-sizing-lg"
					name="where"
				/>
			</div>
		</div>
	</div>
	<div class="text-center mt-4">
		<button class="btn btn-primary btn-lg">Add To Cart</button>
	</div>
</form>
